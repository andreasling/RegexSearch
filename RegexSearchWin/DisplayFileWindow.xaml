<Window x:Class="RegexSearchWin.DisplayFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DisplayFileWindow" Height="300" Width="300">
    <Grid Background="LightGray">
        <ScrollViewer Name="scrollViewer1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="LightGray" Margin="0,29,0,0">
            <TextBlock Name="textBlock1" Text="TextBlock" FontFamily="Consolas" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>
        </ScrollViewer>
        <TextBox Height="23" Name="textBox1" VerticalAlignment="Top" IsReadOnly="True" />
    </Grid>
</Window>
