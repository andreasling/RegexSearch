<Window x:Class="RegexSearchWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Rebuild Index" Height="23" HorizontalAlignment="Right" Name="rebuildIndexButton" VerticalAlignment="Top" Width="95" Click="rebuildIndexButton_Click" />
        <TextBox Height="23" Name="searchTextBox" VerticalAlignment="Top" TextChanged="searchTextBox_TextChanged" HorizontalContentAlignment="Left" Margin="0,0,101,0" />
        <ListView Margin="6,29,-6,0" Name="resultsListView" MouseDoubleClick="resultsListView_MouseDoubleClick" ItemsSource="{Binding Results}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File" DisplayMemberBinding="{Binding FileName}" Width="200" />
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding FolderName}" Width="auto" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
